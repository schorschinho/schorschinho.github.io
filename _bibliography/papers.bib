  file = {C\:\\Users\\goelt\\OneDrive - Johns Hopkins\\ZoteroPaperFolder\\Oeltzschner_et_al_2018_Effects_of_eddy_currents_on_selective_spectral_editing_experiments_at_3T.pdf},
