  title = {Reproducibility of Brain {{MRS}} in Older Healthy Adults at {{7T}}},
  author = {Wijtenburg, S. Andrea and Rowland, Laura M. and Oeltzschner, Georg and Barker, Peter B. and Workman, Clifford I. and Smith, Gwenn S.},
